import Layout from "../../layouts/Layout.astro";

export async function getStaticPaths(){
    const proyectos = await getCollection("proyectos");

    return proyectos.map((proyecto) => ({
        params:{id: proyecto.slug},
        props:{ proyecto }
    }))
}

